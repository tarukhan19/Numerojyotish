<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DialogFragment.ChangePasswordFragment">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imagebackground"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/transwhite"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:src="@drawable/forgetpassword"

            />

        <com.numerojyotish.customFont.TextViewBoldFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter your registered mobile no"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            >
            <com.numerojyotish.customFont.EditTextAirenRegular
                android:id="@+id/mobilenoET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbackground"
                android:hint="Mobile No"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:maxLength="10"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:maxLines="1"
                />

        </LinearLayout>


        <com.numerojyotish.customFont.ButtonAirenRegular
            android:id="@+id/loginBTN"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/gradient"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

    </LinearLayout>
</layout>