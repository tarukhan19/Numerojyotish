<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="3dp"

                >
                <com.numerojyotish.customFont.TextViewBoldFont
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_weight="0.4"
                    android:text="Name: "
                    />
                <com.numerojyotish.customFont.TextViewAirenregular
                    android:id="@+id/customerNameTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_weight="0.6"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="3dp"

                >
                <com.numerojyotish.customFont.TextViewBoldFont
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_weight="0.4"
                    android:text="Mobile No: "
                    />
                <com.numerojyotish.customFont.TextViewAirenregular
                    android:id="@+id/custMobileNoTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_weight="0.6"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="3dp"

                >
                <com.numerojyotish.customFont.TextViewBoldFont
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_weight="0.4"
                    android:text="Email ID: "
                    />
                <com.numerojyotish.customFont.TextViewAirenregular
                    android:id="@+id/emailidTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_weight="0.6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="3dp"

                >
                <com.numerojyotish.customFont.TextViewBoldFont
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_weight="0.4"
                    android:text="Date of Birth: "
                    />
                <com.numerojyotish.customFont.TextViewAirenregular
                    android:id="@+id/gstnoTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_weight="0.6"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="3dp"
                >
                <com.numerojyotish.customFont.TextViewBoldFont
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:layout_weight="0.4"
                    android:text="Member Expiration Date: "
                    />
                <com.numerojyotish.customFont.TextViewAirenregular
                    android:id="@+id/expirationdateTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:layout_weight="0.6"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:weightSum="1"
                android:gravity="center">

                <com.numerojyotish.customFont.TextViewBoldFont
                    android:id="@+id/editcustomerTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="Edit DETAILS"
                    android:textAllCaps="true"
                    android:elevation="5dp"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:textSize="18sp" />




            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>