<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment.ChangePasswordFragment">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            >
            <com.project.numerojyotish.customFont.EditTextAirenRegular
                android:id="@+id/oldpasswordET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbackground"
                android:hint="Old Password"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:maxLength="15"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:maxLines="1"
                />
            <com.project.numerojyotish.customFont.EditTextAirenRegular
                android:id="@+id/newpasswordET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbackground"
                android:hint="New Password"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:maxLength="15"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:maxLines="1"
                />

            <com.project.numerojyotish.customFont.EditTextAirenRegular
                android:id="@+id/confNewpasswordET"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittextbackground"
                android:hint="Confirm New Password"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:maxLength="15"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:maxLines="1"
                />
        </LinearLayout>


        <com.project.numerojyotish.customFont.ButtonAirenRegular
            android:id="@+id/loginBTN"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/gradient"
            android:layout_marginTop="50dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</layout>